{
  "name": "simple-file-intellisense",
  "displayName": "Simple File Intellisense",
  "description": "最简单的文件智能提示插件",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "File Intellisense Configuration",
      "properties": {
        "fileIntellisense.targetFolder": {
          "type": "string",
          "default": "./const",
          "description": "指定要提供智能提示的文件夹路径（相对于工作区根目录）"
        },
        "fileIntellisense.fileExtensions": {
          "type": "array",
          "default": [
            ".js",
            ".ts",
            ".jsx",
            ".tsx",
            ".json",
            ".txt",
            ".yaml"
          ],
          "description": "希望包含的文件扩展名"
        },
        "fileIntellisense.functionName": {
          "type": "string",
          "default": "useConst",
          "description": "触发智能提示的函数名称"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
